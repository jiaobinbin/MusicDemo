<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mybg1"
    >
    <EditText
        android:id="@+id/etMyserch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:ems="10"
        android:hint="输入歌词名"
        android:visibility="gone"
        android:inputType="text"
        />
    <ListView
        android:id="@+id/lvList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:cacheColorHint="#fff"
        >

    </ListView>
    <RelativeLayout
        android:id="@+id/rlPlayVoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/player_progresslayout_bg"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/ivPlayerMinVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/volume_min_icon"
            />
        <ImageView
            android:id="@+id/ivPlayerMaxVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/volume_max_icon"
            />
        <SeekBar
            android:id="@+id/sbPlayerVoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivPlayerMaxVoice"
            android:layout_toRightOf="@+id/ivPlayerMinVoice"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:progressDrawable="@drawable/voice_seekbar_progress"
            android:thumb="@drawable/voice_seekbar_thumb"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/ibOpenVoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/player_btn_voice"
            />
        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/previous_music_selector"
            />
        <Button
            android:id="@+id/btnPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/play_music_selector"
            />
        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/next_music_selector"
            />
        <Button
            android:id="@+id/btnPlayerList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/player_list_selector"
            />
    </LinearLayout>


</LinearLayout>